<idea-plugin>
  <id>net.mlcoder.unimath.keyboard</id>
  <name>Unicode Keyboard</name>
  <vendor email="myungo@gmail.com" url="https://mlcoder.net">mlcoder.net</vendor>

  <description><![CDATA[Unicode Keyboard for Math Symbols. For math syumbols]]></description>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Add your actions here -->
  <actions>
    <action id="net.mlcoder.unimath.PopupAction" class="net.mlcoder.unimath.PopupAction" text="Math Symbols"
            description="Example">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
      <keyboard-shortcut first-keystroke="control U" keymap="$default"/>
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="control U" remove="true"/>
      <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control U" replace-all="true"/>
    </action>
  </actions>
</idea-plugin>